<div class="people">
  <%= render 'people/new', person: Person.new %>
  <nav>
    <div class="nav nav-tabs justify-content-end" id="nav-tab" role="tablist">
      <a class="nav-item nav-link list-view active" id="nav-list-tab" data-toggle="tab" href="#nav-list" role="tab" aria-controls="nav-list" aria-selected="true">
        <%= fa_icon "th-list" %>
      </a>
      <a class="nav-item nav-link profiles-view" id="nav-profiles-tab" data-toggle="tab" href="#nav-profiles" role="tab" aria-controls="nav-profiles" aria-selected="false">
        <%= fa_icon "id-card" %>
      </a>
    </div>
  </nav>

  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-list" role="tabpanel" aria-labelledby="nav-list-tab">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">e-Mail</th>
            <th scope="col">Telefon</th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.email %></td>
              <td><%= person.phone %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="nav-profiles" role="tabpanel" aria-labelledby="nav-profiles-tab">
      <%= render partial: "people/show", collection: @people, as: :person %>
    </div>
  </div>
</div>
