    </a>
  </div>
</nav>

    <%= render 'basic/records', records: records %>

    <%= render "#{records.klass.to_s.pluralize.downcase}/new", record: records.klass.new %>

<script>
  $( document ).ready(function() {
    $( ".list-view, .profiles-view" ).click(function() {
      $(".multi-collapse").collapse('toggle');
    });
  });
</script>
