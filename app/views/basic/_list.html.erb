<% people = people || records %>
<table class="table">
<thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">e-Mail</th>
  </tr>
</thead>
<tbody>
  <% people.each do |person| %>
    <tr>
      <td><%= link_to person.name, person_path(person) %></td>
      <td><%= mail_to person.email %></td>
    </tr>
  <% end %>
</tbody>
</table>
