<div class="new-tag_list">

  <button type="button" class="btn btn-light tag_list-<%= tag_list.id %>-edit" data-toggle="modal" data-target=".tag_list-<%= tag_list.id %>-edit-modal">
    <%= fa_icon "plus" %> Tag erstellen
  </button>

  <!-- Modal -->
  <div class="modal fade tag_list-<%= tag_list.id %>-edit-modal" tabindex="-1" role="dialog" aria-labelledby="Edit tag_list" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Tag erstellen</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render "tag_lists/form", tag_list: tag_list %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Schliessen</button>
        </div>
      </div>
    </div>
  </div>

</div>
