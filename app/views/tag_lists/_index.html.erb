<% tag_lists = tag_lists || @tag_lists %>
  <h1>Tags - Ãœbersicht</h1>
  <hr />

  <div class="row">
    <div class="col-sm-12 col-md-6">
        <div class="bg-light rounded p-2 m-2">
          <h3>Personen</h3>
          <% tag_lists.where(model: "Person").order(:category).each do |tag_list| %>
            <p>
              <%= link_to tag_list.name, overview_path(params: {search_inputs: {model: tag_list.model, "#{tag_list.category}_list" => [tag_list.name] }}), class: "btn btn-outline-dark" %>
                - Anzahl: <%= class_for(tag_list.model).tagged_with(tag_list.name, :on => tag_list.category.pluralize.to_sym).count %>
            </p>
            <hr>
            <% end %>
        </div>
      </div>
    <div class="col-sm-12 col-md-6">
      <div class="bg-light rounded p-2 m-2">
        <h3>Institutionen</h3>
        <% tag_lists.where(model: "Institution").order(:category).each do |tag_list| %>
          <p>
            <%= link_to tag_list.name, overview_path(params: {search_inputs: {model: tag_list.model, "#{tag_list.category}_list" => [tag_list.name] }}), class: "btn btn-outline-dark" %>
            - Anzahl: <%= class_for(tag_list.model).tagged_with(tag_list.name, :on => tag_list.category.pluralize.to_sym).count %>
          </p>
          <hr>
      <% end %>
      </div>
    </div>
  </div>

  <br>

    <%= render 'tag_lists/new', tag_list: TagList.new %>
