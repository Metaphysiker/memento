
<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :planned_date %>
    <%= f.input :language %>
    <%= f.input :working_title %>
    <%= f.input :person_id, as: :select, collection: Person.all, label: "Autor", label_method: :name, value_method: :id, input_html: {class: 'chosen-select', :data => {:placeholder => "Person auswÃ¤hlen"}, multiple: false} %>
    <%= f.input :submitted %>
    <%= f.input :published %>
    <%= f.input :author_informed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
