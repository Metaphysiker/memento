  <h1 class="text-center">
    <%= link_to "Institutionen", institutions_path, class: "black_link" %>
  </h1>
  <nav>
    <p>
      <%= render "institutions/search_institutions_form" %>
    </p>
  <div class="nav nav-tabs justify-content-end" id="nav-tab" role="tablist">
