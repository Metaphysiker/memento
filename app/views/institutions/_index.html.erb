  </div>
</nav>

    <%= render 'institutions/institutions', institutions: institutions %>

    <%= render 'institutions/new', institution: Institution.new %>


<script>
  $( document ).ready(function() {
    $( ".list-view, .profiles-view" ).click(function() {
      $(".multi-collapse").collapse('toggle');
    });
  });
</script>
