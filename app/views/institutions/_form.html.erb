<div class="institution-<%= institution.id %>-edit-form">
<%= simple_form_for(institution, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <%= f.input :website %>
  <%= f.input :phone %>
  <%= f.input :language, collection: Rails.configuration.language.map {|p| [t("#{p}"), p]} %>
  <%= f.input :functionality_list, as: :select, collection: TagList.where(model: "Institution", category: "functionality"), label: "Funktionalit채ten", label_method: :name, value_method: :name, input_html: {class: 'chosen-select', :data => {:placeholder => "Tags ausw채hlen"}, multiple: true} %>
  <%= f.input :target_group_list, as: :select, collection: TagList.where(model: "Institution", category: "target_group"), label: "Zielgruppe", label_method: :name, value_method: :name, input_html: {class: 'chosen-select', :data => {:placeholder => "Tags ausw채hlen"}, multiple: true} %>

  <% if false %>
  <p>
      <b>F체r Serienbriefe</b>
  </p>
    <%= f.input :firstname_of_official %>
    <%= f.input :lastname_of_official %>
    <%= f.input :anrede_of_official %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>

<script>
  $( document ).ready(function() {

    $('.chosen-select').chosen({
      allow_single_deselect: true,
      no_results_text: 'Nichts gefunden',
      inherit_select_classes: false,
      search_contains: true,
      width: '100%'
    });

  });
</script>
